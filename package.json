{
  "name": "internet-speed-monitor",
  "version": "1.0.2",
  "description": "Electron app for monitoring internet connectivity speed at set intervals",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --debug",
    "prebuild": "rm -rf dist",
    "build": "electron-builder",
    "build:mac": "npm run build -- --mac",
    "build:win": "npm run build -- --win",
    "build:linux": "npm run build -- --linux",
    "build:all": "npm run build -- --mac --win --linux",
    "dist": "npm run build:all",
    "pack": "npm run build -- --dir",
    "release": "npm run build -- --publish=always",
    "version": "auto-changelog -p && git add CHANGELOG.md"
  },
  "keywords": [
    "electron",
    "internet",
    "speed",
    "monitor",
    "connectivity"
  ],
  "author": {
    "name": "Omri Lotan",
    "email": "omri@omrilotan.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/omrilotan/internet-speed-monitor",
  "repository": {
    "type": "git",
    "url": "https://github.com/omrilotan/internet-speed-monitor.git"
  },
  "bugs": {
    "url": "https://github.com/omrilotan/internet-speed-monitor/issues"
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "fast-speedtest-api": "^0.3.2",
    "chart.js": "^4.4.0"
  },
  "build": {
    "appId": "com.omrilotan.internet-speed-monitor",
    "productName": "Internet Speed Monitor",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "preload.js",
      "!dist",
      "!.git",
      "!README.md",
      "!*.log",
      "!.github",
      "!.nvmrc",
      "!.npmrc"
    ],
    "asarUnpack": [
      "node_modules/fast-speedtest-api/**/*"
    ],
    "icon": "assets/icon",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "portable",
          "arch": ["x64", "ia32"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "maintainer": "Omri Lotan <omri@omrilotan.com>",
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "omrilotan",
      "repo": "internet-speed-monitor"
    }
  }
}
